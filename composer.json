{
  "name": "arts/elementor-extension",
  "description": "WordPress library",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Artem Semkin",
      "email": "me@artemsemkin.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "arts/base": "@dev",
    "arts/utilities": "@dev"
  },
  "require-dev": {
    "arts/elementor-stubs": "@dev",
    "brain/monkey": "^2.6",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "ergebnis/composer-normalize": "^2.48",
    "php-stubs/acf-pro-stubs": "^6.5",
    "phpstan/phpstan": "^2.0",
    "phpunit/phpunit": "^9.6",
    "squizlabs/php_codesniffer": "^3.13.4",
    "szepeviktor/phpstan-wordpress": "^2.0",
    "wp-coding-standards/wpcs": "^3.0",
    "yoast/phpunit-polyfills": "^4.0"
  },
  "autoload": {
    "psr-4": {
      "Arts\\ElementorExtension\\": "src/php/"
    }
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ergebnis/composer-normalize": true
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "check": [
      "@phpcs",
      "@phpstan"
    ],
    "fix": "@phpcbf",
    "normalize": "composer-normalize",
    "phpcbf": "phpcbf --standard=phpcs.xml",
    "phpcs": "phpcs --standard=phpcs.xml",
    "phpstan": "phpstan analyse --memory-limit=1G",
    "phpstan:baseline": "phpstan analyse --memory-limit=1G --generate-baseline"
  }
}
