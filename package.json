{
  "name": "@arts/elementor-extension",
  "author": "Artem Semkin",
  "version": "1.0.6",
  "type": "module",
  "license": "MIT",
  "description": "Library for creating Elementor extensions, widgets, skins, tabs, and more in declarative way",
  "private": true,
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=23.0.0"
  },
  "dependencies": {
    "@arts/utilities": "file:../ArtsUtilities"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jquery": "^3.5.33",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "4.0.16",
    "archiver": "^7.0.1",
    "browser-sync": "^3.0.4",
    "chalk": "^5.6.2",
    "chokidar": "^5.0.0",
    "cypress": "^15.8.1",
    "debounce": "^3.0.0",
    "depcheck": "^1.4.7",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "fs-extra": "^11.3.3",
    "glob": "^13.0.0",
    "globals": "^16.5.0",
    "jsdom": "^27.3.0",
    "npm-check-updates": "^19.2.0",
    "prettier": "^3.7.4",
    "sass": "^1.97.1",
    "vitest": "^4.0.16",
    "wp-pot": "^1.10.2"
  },
  "pnpm": {
    "overrides": {
      "vite": ">=7.2.7",
      "brace-expansion": ">=4.0.1",
      "minimatch": ">=9.0.0",
      "js-yaml": ">=4.1.1",
      "glob": ">=11.1.0"
    }
  },
  "scripts": {
    "dev": "node __build__/src/index.js dev",
    "build": "node __build__/src/index.js build",
    "deps:check": "npx npm-check-updates",
    "deps:update": "npx npm-check-updates -u && pnpm install",
    "format": "prettier --write 'src/js/**/*.{js,jsx,json,css,ts,tsx}'",
    "format:check": "prettier --check 'src/js/**/*.{js,jsx,json,css,ts,tsx}'",
    "lint": "eslint 'src/js/**/*.{js,ts,jsx,tsx}'",
    "lint:fix": "eslint --fix 'src/js/**/*.{js,ts,jsx,tsx}'"
  }
}
