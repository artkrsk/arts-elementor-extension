{
  "name": "@arts/elementor-extension",
  "author": "Artem Semkin",
  "version": "1.0.4",
  "type": "module",
  "license": "MIT",
  "description": "Library for creating Elementor extensions, widgets, skins, tabs, and more in declarative way",
  "private": true,
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=23.0.0"
  },
  "dependencies": {
    "@arts/utilities": "file:../ArtsUtilities"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/jquery": "^3.5.33",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "3.2.4",
    "archiver": "^7.0.1",
    "browser-sync": "^3.0.4",
    "chalk": "^5.6.0",
    "chokidar": "^4.0.3",
    "cypress": "^15.0.0",
    "debounce": "^2.2.0",
    "depcheck": "^1.4.7",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "fs-extra": "^11.3.1",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "npm-check-updates": "^18.0.3",
    "prettier": "^3.6.2",
    "sass": "^1.91.0",
    "vitest": "^3.2.4",
    "wp-pot": "^1.10.2"
  },
  "scripts": {
    "dev": "node __build__/src/index.js dev",
    "build": "node __build__/src/index.js build",
    "deps:check": "npx npm-check-updates",
    "deps:update": "npx npm-check-updates -u && npm install",
    "format": "prettier --write 'src/js/**/*.{js,jsx,json,css,ts,tsx}'",
    "format:check": "prettier --check 'src/js/**/*.{js,jsx,json,css,ts,tsx}'",
    "lint": "eslint 'src/js/**/*.{js,ts,jsx,tsx}'",
    "lint:fix": "eslint --fix 'src/js/**/*.{js,ts,jsx,tsx}'"
  }
}
